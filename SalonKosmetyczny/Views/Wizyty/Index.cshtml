@model IEnumerable<SalonKosmetyczny.Models.DbModels.Wizyta>

@{
    ViewBag.Title = "Wizyty";
}


<h2>Wizyty</h2>

<p>
    @Html.ActionLink("Dodaj wizytę", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Klient.DaneKlienta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pracownik.DanePracownika)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zabieg.NazwaZabiegu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataGodzinaRozpoczecia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataGodzinaZakonczenia)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Klient.DaneKlienta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pracownik.DanePracownika)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zabieg.NazwaZabiegu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataGodzinaRozpoczecia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataGodzinaZakonczenia)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.WizytaID }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.WizytaID }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.WizytaID })
            </td>
        </tr>
    }

</table>

